{
    "name": "Cosine Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "gitlab.gitlab-workflow",
                "xdebug.php-debug"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "postStartCommand": "docker compose up -d",
    "portsAttributes": {
        "3000": {
            "label": "Cosine HTTP",
            "protocol": "http"
        },
        "3443": {
            "label": "Cosine HTTPS",
            "protocol": "https"
        }
    }
}
